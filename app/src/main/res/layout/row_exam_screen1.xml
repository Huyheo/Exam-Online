<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="historyScreenRowModel" type="com.examonline.app.modules.historyscreen.data.model.HistoryScreenRowModel"/>
    </data>
    <com.google.android.material.card.MaterialCardView
        android:clickable="true" android:id="@+id/cardView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white_A700"
        app:cardCornerRadius="@dimen/_5pxh"
        app:cardElevation="@dimen/_1pxh"
        app:cardUseCompatPadding="true"
        style="@style/groupStylewhite_1">
        <LinearLayout android:id="@+id/linear1"
            android:layout_gravity="end"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_12pxv"
            android:layout_marginTop="@dimen/_9pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <LinearLayout android:id="@+id/linear2"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3pxv"
                android:layout_weight="1.3" android:layout_width="0dp" android:orientation="horizontal">
<!--                <View-->
<!--                    android:background="@drawable/rectangle_bg_gray_400_radius_3"-->
<!--                    android:id="@+id/view"-->
<!--                    android:layout_gravity="center_vertical"-->
<!--                    android:layout_marginStart="@dimen/_20pxh"-->
<!--                    android:layout_height="@dimen/_72pxv" android:layout_width="@dimen/_72pxh"/>-->
                <LinearLayout android:id="@+id/linear3"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2pxv"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_marginStart="@dimen/_18pxh"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical">
                    <TextView android:gravity="start"
                        android:id="@+id/txtNameOfExam"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@{historyScreenRowModel.txtNameOfExam}"
                        style="@style/txtUbuntumedium16" tools:text="@string/lbl_math_for_child"/>
                    <LinearLayout android:gravity="center"
                        android:id="@+id/linear4"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8pxv"
                        android:layout_width="match_parent" android:orientation="vertical">
                        <LinearLayout android:gravity="center"
                            android:id="@+id/linear5"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent" android:orientation="horizontal">
                            <ImageView android:id="@+id/image"
                                android:layout_gravity="center_vertical"
                                android:layout_height="@dimen/_16pxv"
                                android:layout_marginBottom="@dimen/_2pxv"
                                android:layout_marginTop="@dimen/_1pxv"
                                android:layout_width="@dimen/_16pxh"
                                android:scaleType="fitXY" android:src="@drawable/img_44"/>
                            <TextView android:gravity="start"
                                android:id="@+id/txtNumQuestion"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_11pxh"
                                android:layout_marginStart="@dimen/_4pxh"
                                android:layout_weight="1.5"
                                android:layout_width="0dp"
                                android:text="@{historyScreenRowModel.txtNumQuestion}"
                                style="@style/txt_3" tools:text="@string/lbl_10_question"/>
                        </LinearLayout>
                        <LinearLayout android:gravity="center"
                            android:id="@+id/linear6"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4pxv"
                            android:layout_width="match_parent" android:orientation="horizontal">
                            <ImageView android:id="@+id/image1"
                                android:layout_gravity="center_vertical"
                                android:layout_height="@dimen/_16pxv"
                                android:layout_marginBottom="@dimen/_1pxv"
                                android:layout_marginTop="@dimen/_2pxv"
                                android:layout_width="@dimen/_16pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_12"/>
                            <TextView android:gravity="top|start"
                                android:id="@+id/txtDuration"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4pxh"
                                android:layout_weight="1.7"
                                android:layout_width="0dp"
                                android:text="@{historyScreenRowModel.txtDuration}"
                                style="@style/txt_3" tools:text="@string/lbl_1_hour_15_min"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:id="@+id/linear7"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3pxv"
                android:layout_marginEnd="@dimen/_4pxh"
                android:layout_marginStart="@dimen/_18pxh"
                android:layout_weight="1." android:layout_width="0dp" android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatButton
                    android:gravity="center" android:id="@+id/btnMath"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:clickable="false"
                    android:text="@{historyScreenRowModel.txtSubject}"
                    tools:text="@string/math"
                    android:textAllCaps="false"
                    style="@style/btnSolidRounded"/>
                <TextView android:gravity="center"
                    android:id="@+id/txtTime"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6pxv"
                    android:layout_width="match_parent"
                    android:text="@{historyScreenRowModel.txtTime}"
                    style="@style/txtNunitobold14" tools:text="@string/msg_14_45"/>
                <TextView android:gravity="center"
                    android:id="@+id/txtDate"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@{historyScreenRowModel.txtDate}"
                    style="@style/txtNunitobold14" tools:text="@string/msg_23_11_2"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
