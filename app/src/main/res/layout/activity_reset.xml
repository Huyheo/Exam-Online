<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="resetVM" type="com.examonline.app.modules.reset.data.viewmodel.ResetVM"/>
    </data>
    <FrameLayout android:id="@+id/frame"
        android:layout_height="match_parent"
        android:layout_width="match_parent" style="@style/groupStylewhite_A700">
        <ImageView android:id="@+id/image"
            android:layout_width="705dp"
            android:layout_height="1025dp"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            imageRes="@{@drawable/img_background_4}" tools:src="@drawable/img_background_4"/>
        <LinearLayout android:id="@+id/linear"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_35pxv"
            android:layout_marginEnd="@dimen/_15pxh"
            android:layout_marginStart="@dimen/_7pxh"
            android:layout_marginTop="@dimen/_10pxv"
            android:layout_width="match_parent" android:orientation="vertical">
            <ImageView android:id="@+id/image1"
                android:layout_gravity="start"
                android:layout_height="@dimen/_40pxv"
                android:layout_width="@dimen/_40pxh"
                android:scaleType="fitXY" android:src="@drawable/img_43"/>
            <LinearLayout android:id="@+id/linear1"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_195pxv"
                android:layout_width="match_parent" android:orientation="vertical">
                <TextView android:gravity="top|start"
                    android:id="@+id/txtForgotPassword"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@{resetVM.resetModel.txtForgotPassword}"
                    style="@style/txtNunitobold36" tools:text="@string/lbl_forgot_password"/>
                <TextView android:gravity="top|start"
                    android:id="@+id/txtNewPassword"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@{resetVM.resetModel.txtNewPassword}"
                    style="@style/txtNunitoregular14" tools:text="@string/lbl_new_password"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginEnd="@dimen/_3pxh"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:endIconTint="@color/gray_500"
                    app:endIconMode="password_toggle"
                    app:startIconDrawable="@drawable/img_lock"
                    app:startIconTint="@color/gray_500"
                    app:endIconDrawable="@drawable/show_password_selector"
                    >
                    <EditText
                        android:background="@drawable/rectangle_bg_blue_600_00_border_blue_600_00_radius_10"
                        android:id="@+id/editPassword3"
                        android:layout_gravity="start"
                        android:textColor="@color/blue_600"
                        android:paddingTop="@dimen/_10pxh"
                        android:maxLength="20"
                        android:paddingStart="@dimen/_10pxh"
                        android:paddingEnd="@dimen/_10pxh"
                        android:layout_height="@dimen/_31pxv"
                        android:layout_marginTop="@dimen/_1pxv" android:layout_width="@dimen/_280pxh"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView android:gravity="top|start"
                    android:id="@+id/txtNewPasswordMu"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_width="match_parent"
                    android:text="@{resetVM.resetModel.txtNewPasswordMu}"
                    style="@style/txtUbuntumedium11" tools:text="@string/msg_new_password_mu"/>
                <TextView android:gravity="top|start"
                    android:id="@+id/txtReEnterNewPa"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_width="match_parent"
                    android:text="@{resetVM.resetModel.txtReEnterNewPa}"
                    style="@style/txtNunitoregular14" tools:text="@string/msg_re_enter_new_pa"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginEnd="@dimen/_3pxh"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:endIconTint="@color/gray_500"
                    app:endIconMode="password_toggle"
                    app:startIconDrawable="@drawable/img_lock"
                    app:startIconTint="@color/gray_500"
                    app:endIconDrawable="@drawable/show_password_selector"
                    >
                    <EditText
                        android:background="@drawable/rectangle_bg_blue_600_00_border_blue_600_00_radius_10"
                        android:id="@+id/ConfirmPassword2"
                        android:layout_gravity="start"
                        android:textColor="@color/blue_600"
                        android:paddingEnd="@dimen/_10pxh"
                        android:paddingTop="@dimen/_10pxh"
                        android:paddingStart="@dimen/_10pxh"
                        android:maxLength="20"
                        android:layout_height="@dimen/_31pxv"
                        android:layout_marginTop="@dimen/_1pxv" android:layout_width="@dimen/_280pxh"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>



<!--                <View-->
<!--                    android:background="@drawable/rectangle_bg_blue_600_00_border_blue_600_00_radius_10"-->
<!--                    android:id="@+id/view1"-->
<!--                    android:layout_gravity="start"-->
<!--                    android:layout_height="@dimen/_31pxv"-->
<!--                    android:layout_marginTop="@dimen/_1pxv" android:layout_width="@dimen/_280pxh"/>-->

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSubmit"
                    style="@style/btnSolidRoundedOutline"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_133pxv"
                    android:layout_marginRight="@dimen/_10pxh"
                    android:gravity="center"
                    android:text="@string/lbl_submit"
                    android:textAllCaps="false"
                    tools:text="@string/lbl_submit" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>
