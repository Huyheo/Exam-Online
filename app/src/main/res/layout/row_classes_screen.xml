<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="classesScreenRowModel" type="com.examonline.app.modules.classesscreen.data.model.ClassesScreenRowModel"/>
    </data>
    <com.google.android.material.card.MaterialCardView
        android:clickable="true"
        android:id="@+id/cardView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white_A700"
        app:cardCornerRadius="@dimen/_5pxh"
        app:cardElevation="@dimen/_1pxh"
        app:cardUseCompatPadding="true"
        style="@style/groupStylewhite_1">
        <LinearLayout android:id="@+id/linear"
            android:layout_gravity="end"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_12pxv"
            android:layout_marginTop="@dimen/_12pxv"
            android:layout_width="match_parent"
            android:orientation="horizontal">
<!--            <View-->
<!--                android:background="@drawable/rectangle_bg_gray_400_radius_3"-->
<!--                android:id="@+id/view"-->
<!--                android:layout_marginStart="@dimen/_20pxh"-->
<!--                android:layout_gravity="center_vertical"-->
<!--                android:layout_height="@dimen/_72pxv"-->
<!--                android:layout_width="@dimen/_72pxh"/>-->
            <LinearLayout android:id="@+id/linear1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2pxv"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_marginStart="@dimen/_18pxh"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical">
                <TextView android:gravity="start"
                    android:id="@+id/txtClassName"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@{classesScreenRowModel.txtClassName}"
                    style="@style/txtUbuntumedium16" tools:text="@string/lbl_math_for_child"/>
                <LinearLayout android:gravity="center"
                    android:id="@+id/linear2"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_width="match_parent" android:orientation="vertical">
                    <LinearLayout android:gravity="center"
                        android:id="@+id/linear3"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" android:orientation="horizontal">
                        <ImageView android:id="@+id/image"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/_16pxv"
                            android:layout_marginBottom="@dimen/_2pxv"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_width="@dimen/_16pxh"
                            android:scaleType="fitXY" android:src="@drawable/img_44"/>
                        <TextView android:gravity="start"
                            android:id="@+id/txt10Student"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4pxh"
                            android:layout_weight="1.3"
                            android:layout_width="0dp"
                            android:text="@{classesScreenRowModel.txtNumStudent}"
                            style="@style/txt_3" tools:text="@string/lbl_10_student"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center"
                        android:id="@+id/linear4"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4pxv"
                        android:layout_width="match_parent" android:orientation="horizontal">
                        <ImageView android:id="@+id/image1"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/_16pxv"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:layout_marginTop="@dimen/_2pxv"
                            android:layout_width="@dimen/_16pxh"
                            android:scaleType="fitXY" android:src="@drawable/img_humanmaleboard"/>
                        <TextView android:gravity="top|start"
                            android:id="@+id/txtTeacherName"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4pxh"
                            android:layout_weight="1.7"
                            android:layout_width="0dp"
                            android:text="@{classesScreenRowModel.txtTeacherName}"
                            style="@style/txt_3" tools:text="@string/lbl_teacher_name"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
