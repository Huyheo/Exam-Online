<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="editNameVM" type="com.examonline.app.modules.editname.data.viewmodel.EditNameVM"/>
    </data>
    <FrameLayout android:id="@+id/frame"
        android:layout_height="match_parent"
        android:layout_width="match_parent" style="@style/groupStyle">
        <LinearLayout android:id="@+id/linear"
            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" app:contentInsetStart="0dp">
                <LinearLayout android:id="@+id/linear1"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <ImageView android:id="@+id/image"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_24pxv"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_width="@dimen/_24pxh"
                        android:scaleType="fitXY" android:src="@drawable/img_43"/>

                    <TextView
                        android:id="@+id/txtFullName"
                        style="@style/txtUbuntumedium18"
                        android:layout_width="132dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_16pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_marginEnd="@dimen/_183pxh"
                        android:layout_marginBottom="@dimen/_2pxv"
                        android:layout_weight="0.5"
                        android:gravity="top|start"
                        android:text="@string/lbl_edit_name" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image2"
                    imageRes="@{@drawable/img_group_1795}"
                    android:layout_width="@dimen/_600pxh"
                    android:layout_height="@dimen/_800pxh"
                    android:layout_gravity="center_horizontal"
                    tools:src="@drawable/img_group_1795" />
                <LinearLayout android:id="@+id/linear3"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_39pxv"
                    android:layout_marginLeft="@dimen/_8pxh"
                    android:layout_marginRight="@dimen/_8pxh"
                    android:layout_width="match_parent"
                    android:orientation="vertical">
                    <TextView android:gravity="top|start"
                        android:id="@+id/txtFirstName"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_2pxh"
                        style="@style/txt_4" android:text="@string/lbl_first_name"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fisrtnameLayout"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6pxv"
                        android:layout_width="match_parent"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/gray_500"
                        >
                        <EditText
                            android:id="@+id/editFirstName"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:paddingStart="@dimen/_10pxh"
                            android:paddingEnd="@dimen/_10pxh"
                            android:paddingTop="@dimen/_10pxh"
                            android:textColor="@color/blue_600"
                            android:background="@drawable/rectangle_bg_blue_600_00_border_blue_600_00_radius_10"
                            android:singleLine="true"
                            android:inputType="textPersonName"
                            android:textColorHint="@color/gray_400"
                            android:text="@={editNameVM.editNameModel.editFirstName}" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView android:gravity="top|start"
                        android:id="@+id/txtLastName"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_2pxh"
                        style="@style/txt_4" android:text="@string/lbl_last_name"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/lastnameLayout"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6pxv"
                        android:layout_width="match_parent"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/gray_500"
                        >
                        <EditText
                            android:id="@+id/editLastName"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:paddingStart="@dimen/_10pxh"
                            android:paddingEnd="@dimen/_10pxh"
                            android:paddingTop="@dimen/_10pxh"
                            android:textColor="@color/blue_600"
                            android:background="@drawable/rectangle_bg_blue_600_00_border_blue_600_00_radius_10"
                            android:singleLine="true"
                            android:inputType="textPersonName"
                            android:textColorHint="@color/gray_400"
                            android:text="@={editNameVM.editNameModel.editLastName}" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:gravity="center"
                        android:id="@+id/btnSave"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_89pxh"
                        android:layout_marginStart="@dimen/_89pxh"
                        android:layout_marginTop="@dimen/_20pxv"
                        android:layout_width="match_parent"
                        android:text="@string/lbl_save"
                        android:textAllCaps="false"
                        style="@style/btnSolidRoundedOutline_1"/>
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </FrameLayout>

</layout>
