<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="detailScreenVM" type="com.examonline.app.modules.detailscreen.data.viewmodel.DetailScreenVM"/>
    </data>
    <LinearLayout android:id="@+id/linear"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle">
        <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <LinearLayout android:id="@+id/linear1"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent" android:orientation="horizontal">
                <LinearLayout android:id="@+id/linear21"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_4pxv"
                    android:layout_marginStart="@dimen/_24pxh"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_weight="0.8"
                    android:layout_width="0dp" android:orientation="horizontal">
                    <ImageView android:id="@+id/image"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_24pxv"
                        android:layout_width="@dimen/_24pxh"
                        android:scaleType="fitXY" android:src="@drawable/img_43"/>
                    <TextView android:gravity="top|start"
                        android:id="@+id/txtDetailExam"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2pxv"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:text="@{detailScreenVM.detailScreenModel.txtDetailExam}"
                        style="@style/txtUbuntumedium18" tools:text="@string/lbl_detail_exam"/>
                </LinearLayout>
<!--                <View-->
<!--                    android:background="@drawable/rectangle_bg_gray_400_radius_16"-->
<!--                    android:id="@+id/view"-->
<!--                    android:layout_gravity="center_vertical"-->
<!--                    android:layout_height="@dimen/_32pxv"-->
<!--                    android:layout_marginEnd="@dimen/_20pxh"-->
<!--                    android:layout_marginStart="@dimen/_143pxh" android:layout_width="@dimen/_32pxh"/>-->
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:id="@+id/scrollView"
            android:layout_gravity="center_horizontal"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent">
            <LinearLayout android:id="@+id/linear3"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_11pxv"
                android:layout_width="match_parent" android:orientation="vertical">
                <LinearLayout android:id="@+id/linear4"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" android:orientation="vertical">
                    <TextView android:gravity="top|start"
                        android:id="@+id/txtMathExam"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_23pxh"
                        android:layout_marginStart="@dimen/_23pxh"
                        android:layout_width="wrap_content"
                        android:text="@{detailScreenVM.detailScreenModel.txtMathExam}"
                        style="@style/txtUbuntumedium18" tools:text="@string/lbl_math_exam"/>
                    <FrameLayout android:id="@+id/frame"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20pxv" android:layout_width="match_parent">
                        <ImageView
                            android:id="@+id/image2"
                            imageRes="@{@drawable/img_group_1795}"
                            android:layout_width="@dimen/_600pxh"
                            android:layout_height="@dimen/_800pxh"
                            android:layout_gravity="center_horizontal"
                            tools:src="@drawable/img_group_1795" />
                        <LinearLayout android:id="@+id/linear5"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_62pxv"
                            android:layout_marginEnd="@dimen/_27pxh"
                            android:layout_marginStart="@dimen/_23pxh"
                            android:layout_marginTop="@dimen/_16pxv"
                            android:layout_width="match_parent" android:orientation="vertical">
                            <LinearLayout android:id="@+id/linear54"
                                android:layout_gravity="center|start"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_16pxv"
                                android:layout_marginTop="@dimen/_40pxh"
                                android:layout_width="match_parent" android:orientation="vertical">
                                <TextView android:gravity="top|start"
                                    android:id="@+id/txtBriefExplanati"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    style="@style/txtNunitobold16_1" android:text="@string/msg_brief_explanati"/>
                                <LinearLayout android:id="@+id/linear6"
                                    android:layout_gravity="start"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_1pxv"
                                    android:layout_width="match_parent" android:orientation="vertical">
                                    <LinearLayout
                                        android:id="@+id/linear0"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:paddingTop="@dimen/_5pxh"
                                        android:paddingEnd="@dimen/_5pxh"
                                        android:orientation="horizontal"
                                        tools:ignore="DuplicateIds">
                                        <ImageView
                                            android:id="@+id/image21"
                                            android:layout_gravity="center_vertical"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="@dimen/_2pxv"
                                            android:layout_width="wrap_content"
                                            android:scaleType="fitXY" android:src="@drawable/img_group_1717_4"/>
                                        <LinearLayout
                                            android:id="@+id/linear81"
                                            android:layout_gravity="center_vertical"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_19pxh"
                                            android:layout_weight="1.6"
                                            android:layout_width="0dp" android:orientation="vertical">
                                            <TextView
                                                android:gravity="top|start"
                                                android:id="@+id/txtNumQuestion"
                                                android:layout_gravity="start"
                                                android:layout_height="wrap_content"
                                                android:layout_width="wrap_content"
                                                android:text="@{detailScreenVM.detailScreenModel.txtNumQuestion}"
                                                style="@style/txtUbuntumedium16" tools:text="@string/lbl_10_question"/>
                                            <TextView
                                                android:gravity="center"
                                                android:id="@+id/txt10PointForA"
                                                android:layout_gravity="center_horizontal"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_3pxv"
                                                android:layout_width="match_parent"
                                                android:text="@{detailScreenVM.detailScreenModel.txt10PointForA}"
                                                style="@style/txtNunitoregular14_1" tools:text="@string/msg_10_point_for_a"/>
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/linear2"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:paddingTop="@dimen/_5pxh"
                                        android:paddingEnd="@dimen/_5pxh"
                                        android:orientation="horizontal">
                                        <ImageView android:id="@+id/image6"
                                            android:layout_gravity="center_vertical"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="@dimen/_2pxv"
                                            android:layout_width="wrap_content"
                                            android:scaleType="fitXY" android:src="@drawable/img_group_1717_5"/>
                                        <LinearLayout
                                            android:id="@+id/linear82"
                                            android:layout_gravity="center_vertical"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_19pxh"
                                            android:layout_weight="1.6"
                                            android:layout_width="0dp" android:orientation="vertical">
                                            <TextView
                                                android:gravity="top|start"
                                                android:id="@+id/txtTotalDuration"
                                                android:layout_gravity="start"
                                                android:layout_height="wrap_content"
                                                android:layout_width="wrap_content"
                                                android:text="@{detailScreenVM.detailScreenModel.txtTotalDuration}"
                                                style="@style/txtUbuntumedium16" tools:text="@string/lbl_1_hour_15_min"/>
                                            <TextView
                                                android:gravity="center"
                                                android:id="@+id/txtDuration"
                                                android:layout_gravity="center_horizontal"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_3pxv"
                                                android:layout_width="match_parent"
                                                style="@style/txtNunitoregular14_1" android:text="@string/msg_total_duration"/>
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/linear7"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:paddingTop="@dimen/_5pxh"
                                        android:paddingEnd="@dimen/_5pxh"
                                        android:orientation="horizontal">
                                        <ImageView android:id="@+id/image17"
                                            android:layout_gravity="center_vertical"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="@dimen/_2pxv"
                                            android:layout_width="wrap_content"
                                            android:scaleType="fitXY" android:src="@drawable/img_group_1717_2"/>
                                        <LinearLayout
                                            android:id="@+id/linear83"
                                            android:layout_gravity="center_vertical"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_19pxh"
                                            android:layout_weight="1.6"
                                            android:layout_width="0dp" android:orientation="vertical">
                                            <TextView
                                                android:gravity="top|start"
                                                android:id="@+id/txtStart"
                                                android:layout_gravity="start"
                                                android:layout_height="wrap_content"
                                                android:layout_width="wrap_content"
                                                android:text="@{detailScreenVM.detailScreenModel.txtStart}"
                                                style="@style/txtUbuntumedium16" tools:text="@string/msg_14_45_23_11_2"/>
                                            <TextView
                                                android:gravity="center"
                                                android:id="@+id/txtTimeOpen"
                                                android:layout_gravity="center_horizontal"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_3pxv"
                                                android:layout_width="match_parent"
                                                style="@style/txtNunitoregular14_1" android:text="@string/lbl_time_open"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/linear70"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:paddingTop="@dimen/_5pxh"
                                        android:paddingEnd="@dimen/_5pxh"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:id="@+id/image20"
                                            android:layout_gravity="center_vertical"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="@dimen/_2pxv"
                                            android:layout_width="wrap_content"
                                            android:scaleType="fitXY" android:src="@drawable/img_group_1717_3"/>
                                        <LinearLayout
                                            android:id="@+id/linear8"
                                            android:layout_gravity="center_vertical"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_19pxh"
                                            android:layout_weight="1.6"
                                            android:layout_width="0dp" android:orientation="vertical">
                                            <TextView
                                                android:gravity="top|start"
                                                android:id="@+id/txtClose"
                                                android:layout_gravity="start"
                                                android:layout_height="wrap_content"
                                                android:layout_width="wrap_content"
                                                android:text="@{detailScreenVM.detailScreenModel.txtClose}"
                                                style="@style/txtUbuntumedium16" tools:text="@string/msg_16_45_23_11_2"/>
                                            <TextView
                                                android:gravity="center"
                                                android:id="@+id/txtTimeClose"
                                                android:layout_gravity="center_horizontal"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_3pxv"
                                                android:layout_width="match_parent"
                                                style="@style/txtNunitoregular14_1" android:text="@string/lbl_time_close"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout android:id="@+id/linear10"
                                android:layout_gravity="end"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="vertical">
                                <TextView android:gravity="top|start"
                                    android:id="@+id/txtPleaseReadThe"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:text="@{detailScreenVM.detailScreenModel.txtPleaseReadThe}"
                                    style="@style/txtNunitobold14_1" tools:text="@string/msg_please_read_the"/>
                                <LinearLayout android:id="@+id/linear11"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_16pxv"
                                    android:layout_width="match_parent" android:orientation="vertical">
                                    <LinearLayout
                                    android:id="@+id/linear12"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent" android:orientation="horizontal">
                                    <View
                                    android:background="@drawable/rectangle_bg_bluegray_900_radius_3_035"
                                    android:id="@+id/view1"
                                    android:layout_gravity="top"
                                    android:layout_height="@dimen/_6pxv"
                                    android:layout_marginBottom="@dimen/_26pxv"
                                    android:layout_marginTop="@dimen/_6pxv" android:layout_width="@dimen/_5pxh"/>
                                    <TextView
                                    android:gravity="top|start"
                                    android:id="@+id/txt10PointAwarde"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_15pxh"
                                    android:layout_weight="1.9"
                                    android:layout_width="0dp"
                                    android:text="@{detailScreenVM.detailScreenModel.txt10PointAwarde}"
                                    style="@style/txtNunitoregular14_2" tools:text="@string/msg_10_point_awarde"/>
                                    </LinearLayout>
                                    <LinearLayout
                                    android:id="@+id/linear13"
                                    android:layout_gravity="start"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_16pxv"
                                    android:layout_width="match_parent" android:orientation="horizontal">
                                    <View
                                    android:background="@drawable/rectangle_bg_bluegray_900_radius_3_035"
                                    android:id="@+id/view2"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="@dimen/_6pxv"
                                    android:layout_marginBottom="@dimen/_7pxv"
                                    android:layout_marginTop="@dimen/_6pxv" android:layout_width="@dimen/_5pxh"/>
                                    <TextView
                                    android:gravity="top|start"
                                    android:id="@+id/txtTapOnOptions"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_16pxh"
                                    android:layout_marginStart="@dimen/_15pxh"
                                    android:layout_weight="1.8"
                                    android:layout_width="0dp"
                                    android:text="@{detailScreenVM.detailScreenModel.txtTapOnOptions}"
                                    style="@style/txtNunitoregular14_2" tools:text="@string/msg_tap_on_options"/>
                                    </LinearLayout>
                                    <LinearLayout
                                    android:id="@+id/linear14"
                                    android:layout_gravity="start"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_16pxv"
                                    android:layout_width="match_parent" android:orientation="horizontal">
                                    <View
                                    android:background="@drawable/rectangle_bg_bluegray_900_radius_3_035"
                                    android:id="@+id/view3"
                                    android:layout_gravity="top"
                                    android:layout_height="@dimen/_6pxv"
                                    android:layout_marginBottom="@dimen/_26pxv"
                                    android:layout_marginTop="@dimen/_6pxv" android:layout_width="@dimen/_5pxh"/>
                                    <TextView
                                    android:gravity="top|start"
                                    android:id="@+id/txtClickSubmitIf"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_38pxh"
                                    android:layout_marginStart="@dimen/_15pxh"
                                    android:layout_weight="1.6"
                                    android:layout_width="0dp"
                                    android:text="@{detailScreenVM.detailScreenModel.txtClickSubmitIf}"
                                    style="@style/txtNunitoregular14_2" tools:text="@string/msg_click_submit_if"/>
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnStartExam"
                            style="@style/btnGradientRounded"
                            android:layout_width="@dimen/_100pxh"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_marginBottom="@dimen/_20pxv"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="@string/lbl_start_exam"
                            android:textAllCaps="false"
                            tools:text="@string/lbl_start_exam" />
                    </FrameLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
