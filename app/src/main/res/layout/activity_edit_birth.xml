<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="editBirthVM" type="com.examonline.app.modules.editbirth.data.viewmodel.EditBirthVM"/>
    </data>
    <FrameLayout android:id="@+id/frame"
        android:layout_height="match_parent"
        android:layout_width="match_parent" style="@style/groupStyle">
        <LinearLayout android:id="@+id/linear"
            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" app:contentInsetStart="0dp">
                <LinearLayout android:id="@+id/linear1"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <ImageView android:id="@+id/image"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_24pxv"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_width="@dimen/_24pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_43"/>

                    <TextView
                        android:id="@+id/txtDateOfBirth"
                        style="@style/txtUbuntumedium18"
                        android:layout_width="132dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_16pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_marginEnd="@dimen/_183pxh"
                        android:layout_marginBottom="@dimen/_2pxv"
                        android:layout_weight="0.5"
                        android:gravity="top|start"
                        android:text="@string/lbl_edit_birth" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image2"
                    imageRes="@{@drawable/img_group_1795}"
                    android:layout_width="@dimen/_600pxh"
                    android:layout_height="@dimen/_800pxh"
                    android:layout_gravity="center_horizontal"
                    tools:src="@drawable/img_group_1795" />
                <LinearLayout android:id="@+id/linear3"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_39pxv"
                    android:layout_marginLeft="@dimen/_8pxh"
                    android:layout_marginRight="@dimen/_8pxh"
                    android:layout_width="match_parent" android:orientation="vertical">
                    <TextView android:gravity="top|start"
                        android:id="@+id/txtEditBirth1"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_2pxh"
                        style="@style/txt_4" android:text="@string/lbl_date_of_birth"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/BirthLayout"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6pxv"
                        android:layout_width="match_parent"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/gray_500"
                        app:startIconTint="@color/gray_500"
                        app:startIconCheckable="true"
                        app:startIconDrawable="@drawable/img_calendarblankoutline"
                        >
                        <EditText
                            android:id="@+id/editDateOfBirth"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:paddingStart="@dimen/_10pxh"
                            android:paddingEnd="@dimen/_10pxh"
                            android:paddingTop="@dimen/_10pxh"
                            android:textColorHint="@color/gray_400"
                            android:textColor="@color/blue_600"
                            android:background="@drawable/rectangle_bg_blue_600_00_border_blue_600_00_radius_10"
                            android:text="@={editBirthVM.editBirthModel.editDateOfBirth}"
                            android:inputType="date"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:gravity="center"
                        android:id="@+id/btnSave"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_89pxh"
                        android:layout_marginStart="@dimen/_89pxh"
                        android:layout_marginTop="@dimen/_20pxv"
                        android:layout_width="match_parent"
                        android:text="@string/lbl_save"
                        android:textAllCaps="false"
                        style="@style/btnSolidRoundedOutline_1" tools:text="@string/lbl_save"/>
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </FrameLayout>

</layout>
